@{
    Layout = null;
}
<div class="modal-header">
                            <h5 class="modal-title">Add Order Items</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
@using (Html.BeginForm("AddOrderItem", "Order", FormMethod.Post))
{
    <div class="row list-inline">
            <div class="col-md-5">
                <div class="form-group">
                <select class="js-example-basic-single form-control" name="PId" asp-items="@ViewBag.PId">
                        <option value="0">Choose A Product</option>
                    </select>
                </div>
              @*   <div class="form-group">
                <select class="js-example-basic-single form-control" name="PC" asp-items="@ViewBag.PC">
                        <option value="0">Choose A Product Code</option>
                    </select>
                </div>*@
            </div>
           
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="number" name="Q" id="Q" value="0" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="col-sm-6">
                            <input type="number" name="D" id="D" value="0" class="form-control" placeholder="Discount">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" id="Add">Submit</button>
            </div>
        </div>
}