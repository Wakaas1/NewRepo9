@model YSManagmentSystem.Domain.Product.Category

@{

    ViewData["Title"] = "AddOrEditCategory";
    Layout = null;
}

<div class="modal-header">
                            <h5 class="modal-title">Add Or Edit Category</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">            
            <form action="@Url.Content("/Category/AddOrEditCategory")" id="myForm" class="step-form-horizontal" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" asp-for="CategoryName" class="form-control" placeholder="CategoryName" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" asp-for="Description" class="form-control" placeholder="Description" required>
                        </div>
                    </div>
                   

                </div>
                 <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" name="submit" value="Success" id="Add">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>




<script>validateEmpForm()</script>


