@model YSManagmentSystem.Domain.Product.Brand

@{

    ViewData["Title"] = "AddOrEditBrand";
    Layout = null;
}
<div class="modal-header">
                            <h5 class="modal-title">Add Or Edit Brand</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form action="@Url.Content("/Brand/AddOrEditBrand")" id="step-form-horizontal" class="step-form-horizontal" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" asp-for="BrandName" class="form-control" placeholder="BrandName" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" asp-for="Description" class="form-control" placeholder="Description" required>
                        </div>
                    </div>


                </div>
               <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="Add">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>




<script>validateEmpForm()</script>


