@model YSManagmentSystem.Domain.Product.Supplier

@{

    ViewData["Title"] = "AddOrEditSupplier";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Add Or Edit Supplier</h5>
    <button type="button" class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
</div>
<div class="container-fluid">
  <div class="row">
     <div class="col-md-12">
            <form action="@Url.Content("/Supplier/AddOrEditSupplier")" id="step-form-horizontal" class="step-form-horizontal" method="post">
                <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text"  asp-for="SupplierName" class="form-control" placeholder="SupplierName" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="ContactNumber" class="form-control" placeholder="ContactNumber" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Address" class="form-control" placeholder="Address" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                            <select asp-for="BrandId" asp-items="@ViewBag.BId" class="custom-select mr-sm-2">
                    <option value="0">Choose A Brand</option>
                </select>
            </div>
        </div>

    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="Add">Submit</button>
                </div>

           </form>
                            </div>
                            </div>
                            </div>

  


<script>validateEmpForm()</script>


